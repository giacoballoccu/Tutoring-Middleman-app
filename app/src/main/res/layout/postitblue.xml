<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="377dp"
        android:layout_height="345dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bluepostit" />

    <ImageView
        android:id="@+id/avatarTutor"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="71dp"
        app:srcCompat="@mipmap/ernioavatar1_round" />

    <TextView
        android:id="@+id/nomeCognome"
        android:layout_width="159dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="188dp"
        android:layout_marginLeft="188dp"
        android:layout_marginTop="73dp"
        android:text="TextView"
        android:textColor="@color/blackGrey"
        android:textSize="24sp"
        app:fontFamily="sans-serif-thin" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="229dp"
        android:layout_height="41dp"
        android:layout_below="@+id/nomeCognome"
        android:layout_alignStart="@+id/imageButton"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="29dp"
        app:srcCompat="@drawable/quattrostelle" />

    <TextView
        android:id="@+id/materia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView6"
        android:layout_alignStart="@+id/imageButton"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_marginStart="158dp"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="18dp"
        android:text="materia"
        android:textColor="@color/bluematematica"
        android:textSize="30sp"
        app:fontFamily="sans-serif-condensed-light" />


</RelativeLayout>