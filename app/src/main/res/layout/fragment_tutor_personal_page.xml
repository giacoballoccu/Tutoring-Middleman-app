<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp">

            <LinearLayout
                android:id="@+id/linearLayout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/editButtonT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@null"
                    android:fontFamily="sans-serif-light"
                    android:src="@drawable/pencil"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/profileImgT"
                        android:layout_width="112dp"
                        android:layout_height="114dp"
                        android:layout_gravity="start"
                        android:layout_marginTop="15dp"
                        android:adjustViewBounds="false"
                        android:gravity="center"
                        android:maxWidth="100dp"
                        android:maxHeight="100dp"
                        tools:srcCompat="@tools:sample/avatars" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/usernameT"
                            android:layout_width="wrap_content"
                            android:layout_height="43dp"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/quicksand"
                            android:text="NOME COGNOME"
                            android:textSize="30sp" />

                        <ImageView
                            android:id="@+id/stelline"
                            android:layout_width="229dp"
                            android:layout_height="41dp"
                            android:layout_marginStart="10dp"
                            app:srcCompat="@drawable/quattrostelle" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="124dp"
                        android:layout_height="54dp"
                        android:fontFamily="@font/quicksand"
                        android:text="Materia:"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/materia"
                        android:layout_width="124dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/quicksand"
                        android:text="Materia"
                        android:textSize="30sp" />

                </LinearLayout>


                <Button
                    android:id="@+id/feedbackButton"
                    android:layout_width="364dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/blueButtons"
                    android:fontFamily="@font/quicksand"
                    android:text="Feedback"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="332dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/quicksand"
                    android:text="Le mie date di disponibilitÃ :"
                    android:textSize="24sp" />

                <LinearLayout
                    android:id="@+id/dparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical">

                </LinearLayout>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/add_orario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:src="@drawable/ic_add_black_24dp"
                    android:layout_margin="16dp" />

            </LinearLayout>


        </ScrollView>

    </LinearLayout>

    <ImageButton
        android:id="@+id/editAgendaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="7dp"
        android:background="@null"
        android:backgroundTint="@null"
        app:srcCompat="@drawable/plus" />


</LinearLayout>