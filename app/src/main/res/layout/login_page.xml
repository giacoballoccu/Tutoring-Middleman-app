<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <ImageButton
            android:id="@+id/infoLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:src="@drawable/informazioni" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginTop = "5dp"
            app:srcCompat="@drawable/logouniv800" />

        <TextView
            android:layout_marginBottom="20dp"
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="63dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="LOGIN"
            android:textSize="50dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="100dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="24sp"
            />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Inserire l'email"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="false"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/passwordTextView"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="80dp"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_gravity="center"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Inserire la password"
            android:inputType="textPassword"
            />

        <TextView
            android:id="@+id/loginError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/holo_red_dark"
            android:textColorLink="@color/colorAccent"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/forgottenPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:text="Hai dimenticato la password?"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/login_button"
            android:layout_width="258dp"
            android:layout_height="53dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/blueButtons"
            android:fontFamily="sans-serif-medium"
            android:text="LOGIN"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Non sei ancora registrato?"
                />

            <TextView
                android:id="@+id/signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:text="Registrati"
                android:textColor="@android:color/holo_blue_dark"
                />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    </LinearLayout>
