<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/scrollView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ImageButton
                        android:id="@+id/editButtonT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@null"
                        android:fontFamily="sans-serif-light"
                        android:src="@drawable/pencil"
                        android:textSize="18sp"
                        android:textStyle="bold"

                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/profileImgT"
                            android:layout_width="112dp"
                            android:layout_height="114dp"
                            android:layout_gravity="start"
                            android:layout_marginTop="15dp"
                            android:adjustViewBounds="false"
                            android:gravity="center"
                            android:maxWidth="100dp"
                            android:maxHeight="100dp"
                            tools:srcCompat="@tools:sample/avatars" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/usernameT"
                                android:layout_width="wrap_content"
                                android:layout_height="43dp"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/quicksand"
                                android:text="NOME COGNOME"
                                android:textSize="30sp" />

                            <ImageView
                                android:id="@+id/stelline"
                                android:layout_width="229dp"
                                android:layout_height="41dp"
                                android:layout_marginStart="10dp"
                                app:srcCompat="@drawable/quattrostelle" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="124dp"
                            android:layout_height="54dp"
                            android:fontFamily="@font/quicksand"
                            android:text="Materia:"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/materia"
                            android:layout_width="124dp"
                            android:layout_height="54dp"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/quicksand"
                            android:text="Materia"
                            android:textSize="30sp" />

                    </LinearLayout>


                    <Button
                        android:id="@+id/feedbackButton"
                        android:layout_width="364dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@color/blueButtons"
                        android:fontFamily="@font/quicksand"
                        android:text="Feedback"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/orari"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:fontFamily="@font/quicksand"
                        android:gravity="center"
                        android:text="LunedÃ¬ 11-12"
                        android:textSize="20dp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <Button
            android:id="@+id/lasciaFeedback"
            android:layout_width="211dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/blueButtons"
            android:fontFamily="@font/quicksand"
            android:text="Lascia Feedback"
            android:textSize="18sp" />

    </RelativeLayout>
</RelativeLayout>