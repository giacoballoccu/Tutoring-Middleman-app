<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/avatar_prenotazione"
        android:layout_width="97dp"
        android:layout_height="98dp"
        android:layout_above="@+id/divider2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="15dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ernioavatar1_round" />


    <TextView
        android:id="@+id/nome_reservation"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@+id/avatar_prenotazione"
        android:layout_toRightOf="@+id/avatar_prenotazione"
        android:fontFamily="@font/quicksand"
        android:text="Nome Cognome"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/avatar_prenotazione"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/materia_reservation"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nome_reservation"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/avatar_prenotazione"
        android:layout_toRightOf="@+id/avatar_prenotazione"
        android:fontFamily="@font/quicksand"
        android:text="Informatica"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/avatar_prenotazione"
        app:layout_constraintTop_toBottomOf="@+id/nome_reservation" />

    <View
        android:id="@+id/divider2"
        android:layout_width="395dp"
        android:layout_height="1dp"
        android:layout_below="@+id/ora_prenotazione"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ora_prenotazione" />

    <TextView
        android:id="@+id/ora_prenotazione"
        android:layout_width="107dp"
        android:layout_height="128dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:layout_toEndOf="@+id/materia_reservation"
        android:layout_toRightOf="@+id/materia_reservation"
        android:ems="10"
        android:fontFamily="@font/quicksand"
        android:text="16:00 - 17:00"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/avatar_prenotazione"
        app:layout_constraintTop_toBottomOf="@+id/materia_reservation" />

    <ImageButton
        android:id="@+id/delete_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="1dp"
        android:background="@null"
        app:srcCompat="@android:drawable/ic_delete" />

</RelativeLayout>