<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"
        >

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pop_up_win" />

        <Button
            android:id="@+id/orario_yes"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView9"
            android:layout_alignLeft="@+id/imageView5"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/blueButtons"
            android:fontFamily="@font/quicksand"
            android:text="CONFERMA"
            android:textColor="@color/blackGrey"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintEnd_toStartOf="@+id/orario_no"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView5" />

        <Button
            android:id="@+id/orario_no"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView9"
            android:layout_alignLeft="@+id/imageView5"
            android:layout_toEndOf="@+id/orario_yes"
            android:layout_toRightOf="@+id/orario_yes"
            android:backgroundTint="#CA615B"
            android:fontFamily="@font/quicksand"
            android:text="CANCELLA"
            android:textColor="@color/White"
            app:layout_constraintBottom_toBottomOf="@+id/orario_yes"
            app:layout_constraintEnd_toStartOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/orario_yes"
            app:layout_constraintTop_toTopOf="@+id/orario_yes"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_alignStart="@+id/imageView5"
            android:layout_alignLeft="@+id/imageView5"
            android:layout_alignTop="@+id/imageView5"
            android:layout_alignEnd="@+id/imageView5"
            android:layout_alignRight="@+id/imageView5"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:text="Rimuovere orario?"
            android:textSize="24sp"
            app:fontFamily="@font/quicksand"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5" />
    </android.support.constraint.ConstraintLayout>


</RelativeLayout>