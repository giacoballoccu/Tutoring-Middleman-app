<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pop_up_win" />

    <Button
        android:id="@+id/prenotazione_yes"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="40dp"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/imageView5"
        android:background="@color/blueButtons"
        android:fontFamily="sans-serif-medium"
        android:text="CONFERMA"
        android:textColor="@color/blackGrey"
        app:layout_constraintEnd_toStartOf="@+id/prenotazione_no"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        tools:layout_editor_absoluteY="655dp" />

    <Button
        android:id="@+id/prenotazione_no"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_toEndOf="@+id/prenotazione_yes"
        android:layout_toRightOf="@+id/prenotazione_yes"
        android:background="#CA615B"
        android:fontFamily="sans-serif-medium"
        android:text="CANCELLA"
        android:textColor="@color/White"
        app:layout_constraintBottom_toBottomOf="@+id/prenotazione_yes"
        app:layout_constraintEnd_toStartOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/prenotazione_yes"
        app:layout_constraintTop_toTopOf="@+id/prenotazione_yes"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="345dp"
        android:layout_height="44dp"
        android:layout_alignStart="@+id/imageView5"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignEnd="@+id/imageView5"
        android:layout_alignRight="@+id/imageView5"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:text="Confermare la prenotazione?"
        android:textSize="24sp"
        app:fontFamily="sans-serif-light"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />
</android.support.constraint.ConstraintLayout>