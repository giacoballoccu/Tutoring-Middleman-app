<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:id="@+id/rettangolo"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/avatarAutore"
        android:layout_toRightOf="@+id/avatarAutore"
        app:srcCompat="@drawable/chatbubble"/>

    <ImageView
        android:id="@+id/avatarAutore"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@mipmap/ernioavatar1_round" />

    <TextView
        android:id="@+id/autoreReview"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rettangolo"
        android:layout_alignLeft="@+id/rettangolo"
        android:layout_alignTop="@+id/rettangolo"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="17dp"
        android:text="Nome recensore"
        android:textColor="@color/blackGrey"
        android:textSize="17dp"
        android:textStyle="bold"
        app:fontFamily="@font/quicksand" />

    <ImageView
        android:id="@+id/stellineSingolaReview"
        android:layout_width="88dp"
        android:layout_height="23dp"
        android:layout_alignTop="@+id/rettangolo"
        android:layout_alignEnd="@+id/rettangolo"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="8dp"
        android:layout_toRightOf="@+id/autoreReview"
        app:srcCompat="@drawable/trestelle" />

    <TextView
        android:id="@+id/descrizioneReview"
        android:layout_width="304dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/rettangolo"
        android:layout_alignLeft="@+id/rettangolo"
        android:layout_alignTop="@+id/rettangolo"
        android:layout_alignEnd="@+id/rettangolo"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:text="Veramente un tutor mediocre, 3 stelle."
        android:textColor="@color/blackGrey"
        android:textSize="14dp"
        android:textStyle="bold"
        app:fontFamily="@font/quicksand" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rettangolo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/listDivider" />


</RelativeLayout>